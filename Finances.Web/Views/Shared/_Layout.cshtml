<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Scripts.Render("~/bundles/MicrosoftAjax")
</head>
<body>
    @Html.ActionLink("Home", "Index", "Home")
    |
    @Html.ActionLink("Transactions", "Index", "Transaction")
    @Html.ActionLink("Create", "Create", "Transaction")
    @Html.ActionLink("Current Month", "Index", "Transaction", new { Year = DateTime.Now.Year, Month = DateTime.Now.Month }, null)
    |
    @Html.ActionLink("Accounts", "Index", "Account")
    |
    @Html.ActionLink("Orders", "Index", "Order")
    |
    @Html.ActionLink("Bank Accounts", "Index", "BankAccount")
    |
    @Html.ActionLink("Bank Statements", "Index", "BankStatement")
    @Html.ActionLink("Upload", "Upload", "BankStatement")




    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $("input,select").not("[type=hidden]").not(":disabled").first().focus();

            $("form").submit(function () {
                // Force browser to submit disabled fields.
                $("input,select").removeAttr("disabled", "disabled");
            });
        });
    </script>

    <script src="~/Scripts/EditorHookup.js" type="text/javascript"></script>
</body>
</html>
